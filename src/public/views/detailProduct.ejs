<body>
    <%- include("partials/headerCustomer") %>
        <div class="product-wrapper">
            <form action="/addItem/<%=product[0].idProduct%>" method="POST">
                <section class="product-content">
                    <div class="product-content-heading">
                        <div class="product-name">
                            <h1>
                                <%=product[0].name%> <span>
                                        <%=product[0].description%>
                                    </span>
                            </h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <picture>
                                <img img src="http://localhost:3000/static/image/<%=product[0].thumbnail%>" alt=""
                                    class="img-main">
                            </picture>
                        </div>
                        <div class="col-lg-8 has-border">
                            <div class="product-infomation">
                                <div class="row">
                                    <input type="text" name="price" id="name" value="<%=product[0].price%>"
