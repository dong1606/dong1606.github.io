                        </div>
                    </div>
                </section>
            </form>
            <div class="container-products">
                <div class="title-relateproduct">
                  SẢN PHẨM TƯƠNG TỰ
                </div>
                  <div class="gird_row">
                    <% if (relateProduct) {%>
                      <% for (var i=0; i < relateProduct.length; i++) { %>
                          <div class="container-products-items">
                            <div class="container-products-items__img">
                              <a href="/detailProduct/<%=relateProduct[i].id%>">
                                <picture>
                                  <img img src="http://localhost:3000/static/image/<%=relateProduct[i].thumbnail%>" alt=""
                                    class="container-items__img-first">
                                </picture>
                              </a>
                            </div>
                            <div class="container-items-brand">
                              <span class="brand">
                                <%=relateProduct[i].name%>
                              </span>
                            </div>
                          
                            <div class="container-items-price">
                                <%=relateProduct[i].price%>
                            </div>
                          </div>
                        <%}%>
                          <%}%>
                  </div>
              </div>
        </div>
        
                
          
        <%- include("partials/footer") %>
