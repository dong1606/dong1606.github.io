                                    <input type="text" name="totalPrice" id="name" value="<%=product[0].price%>"
                                        hidden="true">
                                    <div class="col-lg-8" style="border-right: 1px solid rgb(236, 236, 236);">
                                        <div class="specifications">
                                            <div class="price"><span class="price-discount">
                                                    <%=price%> VNĐ
                                                </span> </div>
                                            <ul class="product__info">
                                                <li>
                                                    <div><img
                                                            src="https://lapvip.vn/html-viettech/images/iconproductinfo.png"
