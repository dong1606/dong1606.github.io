<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Thêm Product</title>
  <link href="../../css/addProduct.css" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body>
  <%- include("partials/headerAdmin") %>
    <main>
      <div class="pt-4">
        <div class="row">
          <div class="col-sm-12">
            <div class="addProduct-form">
              <form action="/admin/product/add" method="POST" enctype="multipart/form-data">
                <h2>THÊM SẢN PHẨM</h2>
                <div class="form-group">
                  <span>Tên sản phẩm</span>
                  <input type="text" name="name" placeholder="Nhập name" class="form-control"
                    required="required">
                </div>
                <div class="form-group">
                  <span>Số lượng</span>
                  <input type="number" min="0" name="quantity" placeholder="Nhập quantity" class="form-control"
                    required="required">
                </div>
                <div class="form-group">
                  <span>Mô tả</span>
                  <input type="text" name="description" placeholder="Nhập description" class="form-control"
                    required="required">
                </div>
                <div class="form-group">
                  <span>SKU</span>
                  <input type="text" name="sku" placeholder="Nhập sku" class="form-control" required="required">
                </div>
                <div class="form-group">
                  <span>Giá sản phẩm</span>
                  <input type="number" min="0" name="price" placeholder="Nhập price" class="form-control"
                    required="required">
                </div>
                <div class="form-group">
                  <span>CPU</span>
                  <input type="text" name="cpu" placeholder="Nhập cpu" class="form-control" required="required">
                </div>
                <div class="form-group">
                  <span>RAM</span>
                  <input type="text" name="ram" placeholder="Nhập ram" class="form-control" required="required">
                </div>
                <div class="form-group">
                  <span>HARDDRIVE</span>
                  <input type="text" name="hardDrive" placeholder="Nhập hardDrive" class="form-control"
                    required="required">
                </div>
                <div class="form-group">
                  <span>Màn hình</span>
                  <input type="text" name="screen" placeholder="Nhập screen" class="form-control" required="required">
                </div>
                <div class="form-group">
                  <span>Card</span>
                  <input type="text" name="card" placeholder="Nhập card" class="form-control" required="required">
                </div>
                <div class="form-group">
                  <span>Loại sản phẩm</span>
                  <select id="category" name="idCategory">

                    <% for ( var i=0; i < category.length; i++ ) { %>
                      <option value="<%=category[i].id %>">
                        <%=category[i].name %>
                      </option>
                      <% } %>
                  </select>
                </div>
                <div class="form-group">
                  <span>Ưu đãi</span>
                  <select id="promotion" name="idPromotion">

                    <% for ( var i=0; i < promotion.length; i++ ) { %>
                      <option value="<%=promotion[i].id %>">
                        <%=promotion[i].name %>
                      </option>
                      <% } %>
                  </select>
                </div>
                <div class="form-group">
                  <span>Hình ảnh</span>
                  <input type="file" name="image" class="" accept="">
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-success btn-lg btn-block">Thêm</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

</body>

</html>